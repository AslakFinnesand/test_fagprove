<mvc:View
    controllerName="test.fagprove.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    core:require="{
		formatter: 'test/fagprove/model/formatter'
	}"
>
    <Page
        title="{i18n>logInPage}"
        id="page"
    >
        <FlexBox
            width="100%"
            height="100%"
            alignItems="Center"
            justifyContent="Center"
        >
            <Panel width="25rem">
                <l:VerticalLayout
                    id="idLoginnVerticalLayout"
                    width="100%"
                    class="sapUiContentPadding"
                >
                    <Label
                        text="{i18n>userName}"
                        required="true"
                        textAlign="Begin"
                        width="100%"
                    />
                    <Input
                        id="idUserNameInput"
                        ariaLabelledBy="idEnterYourPasswordDescriptionInvisibleText"
                        required="true"
                        value="{/userName}"
                    />
                    <Label
                        text="{i18n>password}"
                        required="true"
                        textAlign="Begin"
                        width="100%"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        ariaLabelledBy="idEnterYourUsernameDescriptionInvisibleText"
                        id="idPasswordLoginInput"
                        required="true"
                        type="Password"
                        value="{/password}"
                    />

                    <Button
                        id="idLogInButton"
                        ariaLabelledBy="idSignInButtonDescriptionInvisibleText"
                        text="{i18n>logInBtn}"
                        press=".onLogInButtonPress"
                        width="100%"
                        class="sapUiSmallMarginTop"
                    />
                </l:VerticalLayout>
            </Panel>
        </FlexBox>
    </Page>
    <core:InvisibleText
        id="idEnterYourPasswordDescriptionInvisibleText"
        text="{i18n>loginPasswordAriaDescription}"
    />
    <core:InvisibleText
        id="idEnterYourUsernameDescriptionInvisibleText"
        text="{i18n>loginUserNameAriaDescription}"
    />
    <core:InvisibleText
        id="idSignInButtonDescriptionInvisibleText"
        text="{i18n>loginButtonAriaDescription}"
    />
</mvc:View>
